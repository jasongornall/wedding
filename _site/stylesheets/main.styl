$active = gold
$text_color = white

html
  background black
  &::-webkit-scrollbar
    width 7px
  &::-webkit-scrollbar-thumb
    background-color $active
  &::-webkit-scrollbar-track
    background-color $text_color
  .mask
    position: fixed;
    left: 50%;
    transform: translate(-50%);
    top: 0;
    overflow: hidden;

  h1
    padding: 20px 10px;
    text-align: center;
    margin 0
  #body
    position relative
    z-index 100
    text-align center
    .main-header
      font: 400 130px/0.8 'Cookie', Helvetica, sans-serif;
      color: #fff;
      text-shadow: 4px 4px 3px rgba(0,0,0,0.1);
      text-align: center;
      font-size 75px
      margin-bottom 20px
      padding-top: 27px;

    #navigation
      text-align center
      background: rgba(0,0,128,0.55);
      display: inline-block;
      text-align: center;
      padding: 10px;
      border-radius: 13px;
      margin-top: 130px;
      > a
        color white
        margin 0 10px;
        &:hover
          color $active
        &.active
          color $active

    #routes
      text-align left
      position: relative;
      z-index: 10;
      color: white;
      max-width: 800px;
      margin: 0 auto;
      margin-top: 60px;
      [data-route]
        background rgba(0,0,0,.7)
        display none
      a
        color gold
      [data-route= "/story"]
        padding 10px
        h1
          text-align center
          color $active
          font 400 48px/0.8 'Cookie', Helvetica, sans-serif
          margin 0
          padding 15px
        img
          max-width: 190px;
          &.left
            padding-right 10px
            float left
          &.center
            display: block;
            margin: 20px auto;

      [data-route = "/rsvp"]
        iframe
          width 800px
          height 1790px
          max-width 100%
      [data-route = "/accomodations"]

        p
          padding 10px
        iframe, img
          display block
          width 100%
      [data-route = "/registery"]

        img
          float left
          width 120px
        .row
          display table-row

        .cell
          display table-cell
          vertical-align middle
          text-align left
          padding 10px
          img
            margin: 0 auto;
            display: block;
      [data-route = "/wedding-location"]
        background none
        .section
          background rgba(0,0,0,.7)
          margin-bottom 20px
          padding 10px
          box-sizing border-box

        p
          margin-bottom 10px
        iframe
          width 100%


@media (max-width: 800px)
  html #body
    .main-header
      font-size: 50px;
      margin-bottom: 30px;
      padding-top 25px
    #navigation
      margin-top 130px
      > a
        padding: 10px;
        line-height: 20px;
        margin 0
        display: inline-block

@media (max-width: 536px)
  html #body
    .main-header
      padding-top 15px
    #navigation
      margin-top 100px


