$active = gold
$text_color = white


html
  background-image: url('../images/background.jpg')
  background-size: cover;
  height: 100%;
  width: 100%;
  background-position: center bottom;
  background-attachment: fixed
  #front-background
    background-image: url('../images/background-front.png')
    background-size: cover;
    height: 100%;
    width: 100%;
    background-position: center bottom;
    position fixed
    top 0
    left 0

  #body
    position relative
    z-index 100
    .main-header
      font: 400 130px/0.8 'Cookie', Helvetica, sans-serif;
      color: #fff;
      text-shadow: 4px 4px 3px rgba(0,0,0,0.1);
      text-align: center;
      padding-top: 75px;
      font-size 90px
      height: 1em;

    #navigation
      text-align center
      > a
        color white
        margin 0 10px;
        &:hover
          color $active

    #routes
      position: relative;
      z-index: 10;
      color: white;
      max-width: 800px;
      margin: 0 auto;
      margin-top: 100px;
      background rgba(0,0,0,.4)

      [data-route = "/rsvp"]
        iframe
          width 800px
          height 1675px
          max-width 100%


